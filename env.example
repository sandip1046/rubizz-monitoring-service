# Server Configuration
PORT=3009
NODE_ENV=development
SERVICE_NAME=rubizz-monitoring-service
SERVICE_VERSION=1.0.0

# Database Configuration
DATABASE_URL="mongodb+srv://mongodb_user:password@monitoring-cluster.hqvmrkw.mongodb.net/rubizz-monitoring"

# Redis Service Configuration
REDIS_SERVICE_URL=https://rubizz-redis-service.onrender.com/api/v1/redis
REDIS_SERVICE_TIMEOUT=30000
REDIS_SERVICE_RETRIES=3
REDIS_SERVICE_RETRY_DELAY=1000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Gateway Configuration
API_GATEWAY_URL=http://localhost:3000
API_GATEWAY_TOKEN=your-api-gateway-token

# Monitoring Configuration
METRICS_COLLECTION_INTERVAL=30000
HEALTH_CHECK_INTERVAL=60000
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=85
ALERT_THRESHOLD_DISK=90
ALERT_THRESHOLD_RESPONSE_TIME=5000

# External Services
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:6001
ELASTICSEARCH_ENDPOINT=http://localhost:9200

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/monitoring-service.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# Swagger Configuration
SWAGGER_TITLE=Rubizz Monitoring Service API
SWAGGER_DESCRIPTION=API documentation for Rubizz Hotel Inn Monitoring Service
SWAGGER_VERSION=1.0.0
SWAGGER_BASE_URL=http://localhost:3009

# Alert Configuration
ALERT_EMAIL_ENABLED=true
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=your-email@gmail.com
ALERT_EMAIL_PASS=your-app-password
ALERT_EMAIL_FROM=monitoring@rubizzhotel.com
ALERT_EMAIL_TO=admin@rubizzhotel.com

# Slack Configuration
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# PagerDuty Configuration
ALERT_PAGERDUTY_ENABLED=false
ALERT_PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# Service Discovery
SERVICE_DISCOVERY_ENABLED=true
SERVICE_REGISTRY_URL=http://localhost:8500
SERVICE_CHECK_INTERVAL=30s
SERVICE_CHECK_TIMEOUT=10s

# gRPC Configuration
GRPC_PORT=50051
GRPC_HOST=0.0.0.0

# GraphQL Configuration
GRAPHQL_PORT=4000
GRAPHQL_PATH=/graphql
GRAPHQL_SUBSCRIPTION_PATH=/graphql-subscriptions

# WebSocket Configuration
WEBSOCKET_PORT=8080
WEBSOCKET_PATH=/ws

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=rubizz-monitoring-service
KAFKA_GROUP_ID=monitoring-service-group
KAFKA_TOPICS_MONITORING=monitoring.events
KAFKA_TOPICS_ALERTS=monitoring.alerts
KAFKA_TOPICS_METRICS=monitoring.metrics
